{
    "description": "IDN Homograph Attack Block for Firefox",
	"manifest_version": 2,
	"name": "FxHomographBlocker",
	"version": "1.0",
    "permissions": [
        "contextMenus",
        "tabs",
        "webNavigation",
        "webRequest",
        "webRequestBlocking",
        "activeTab",
        "<all_urls>"
    ],
    "browser_action": {
        "default_title": "Fx Homograph Blocker",
        "default_popup": "popup.html",
        "browser_style": true
      },
    "background": {
        "scripts": ["background.js", "punycode.js"],
        "persistent": false
      }
}